<html>
    <head>
        <%include applib%>
        <script>
            function goto(link) {
                location.href = link;
            }
            $(document).ready(function() {
               $("#closediv").hide(); 
            });
        </script>
    </head>
    <body style="margin: 0;">
        <table style="table-layout: fixed; width: 100%; height: 100%;">
            <@
                var dirs = Directory.GetDirectories("web_docs/");
                int i = 0;
                foreach (string s in dirs)
                {
                    if (File.Exists(s + "/index.wsx") && File.Exists(s + "/logo.jpg"))
                    {
                        echo("<div gazetime='3' ongaze='goto(\"{1}\")' ongazeleave='(el)=>el.style.backgroundColor=\"whitesmoke\"' ongazeenter='(el)=>el.style.backgroundColor=\"lightgreen\"' id='logo_{0}' ongaze=goto('{1}') style='height: 15%; width: 99%; background-color: whitesmoke; padding: 5px; display: flex; vertical-align: middle; align-items: center; '><img src='{2}' style='border-radius: 10px; height: 100%; width: auto;' /><div style='width: 50px; display: inline-block;'>&nbsp;</div><span style='font-family: cursive; font-size: 30px;'>{3}</span></div>", i, s.Replace("web_docs", "") + "/index.wsx", s.Replace("web_docs", "") + "/logo.jpg", s.Substring(s.LastIndexOf("/") + 1));
                    }
                    i++;
                }
            @>
        </table>
    </body>
</html>